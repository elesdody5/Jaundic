<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.jaundice.MainActivity"
    android:background="@drawable/main_background"
   >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_marginRight="10dp"
    android:orientation="vertical">
    

<LinearLayout
    android:id="@+id/upload_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:visibility="invisible">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"

        android:text="@string/upload"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/upload_button"
        android:layout_width="@dimen/floating_button_size"
        android:layout_height="@dimen/floating_button_size"
        android:layout_marginBottom="@dimen/floating_button_marginBottom"
android:clickable="false"
        android:elevation="5dp"
        app:backgroundTint="@color/cardview_light_background"
        app:fabSize="normal"
        app:pressedTranslationZ="12dp"
        app:srcCompat="@drawable/ic_action_upload"
        />


</LinearLayout>

    <LinearLayout
        android:id="@+id/camera_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/floating_button_marginStart"
        android:visibility="invisible"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/take_photo"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp"
            android:textStyle="bold" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/camera_button"
        android:layout_width="@dimen/floating_button_size"
        android:layout_height="@dimen/floating_button_size"
        android:layout_marginBottom="@dimen/floating_button_marginBottom"
        android:layout_marginStart="@dimen/floating_button_marginStart"
        android:elevation="5dp"
        app:backgroundTint="@color/cardview_light_background"
        app:fabSize="normal"
        android:clickable="false"


        app:pressedTranslationZ="12dp"
        app:srcCompat="@drawable/ic_action_camera" />

        </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_button"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginBottom="@dimen/floating_button_marginBottom"
        android:layout_marginStart="110dp"


        android:elevation="5dp"
        app:backgroundTint="@android:color/holo_blue_bright"
        app:fabSize="normal"
        app:pressedTranslationZ="12dp"
        app:srcCompat="@drawable/ic_action_add" />

</LinearLayout>

</RelativeLayout>
